{
    "openapi": "3.0.0",
    "info": {
        "title": "DailyTasks API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API server (development)"
        }
    ],
    "paths": {
        "/api/tag": {
            "get": {
                "tags": [
                    "Tags"
                ],
                "summary": "List tags",
                "description": "Listing of all tags for current user",
                "operationId": "05429641ff2d4731ad9bc60b1c0e138c",
                "responses": {
                    "200": {
                        "description": "Listed tags"
                    },
                    "400": {
                        "description": "Unauthorised"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Tags"
                ],
                "summary": "Create new tag",
                "operationId": "d0eb902a938b5cd865c3a6efce14c0b1",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Name of the new tag",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "Color of the new tag in hex format",
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "name": "Personal",
                                    "color": "#333333"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Tag created successfully"
                    },
                    "400": {
                        "description": "Unauthorised"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/tag/{id}": {
            "put": {
                "tags": [
                    "Tags"
                ],
                "summary": "Update selected tag",
                "operationId": "136a6d25ad8f7d4e9409b189bf3056e3",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the tag",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tag updated successfully"
                    },
                    "400": {
                        "description": "Unauthorised"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Tags"
                ],
                "summary": "Delete selected tag",
                "operationId": "afecbd0d82f4fba14e7fb92f441e8ea6",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the tag",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tag deleted successfully"
                    },
                    "400": {
                        "description": "Unauthorised"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/user/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Register new user",
                "operationId": "df1ca50c32c4c932c79956c52c87eaab",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "User's name",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "User's email",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "User's password",
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "name": "Jane Doe",
                                    "email": "jane.doe@mail.com",
                                    "password": "abcdef"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully"
                    },
                    "422": {
                        "description": "Validation errors"
                    }
                }
            }
        },
        "/api/user/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "User login",
                "operationId": "e2f16b490348a902bb9994972e2d20af",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "User's email",
                                        "type": "string",
                                        "example": "test@example.com"
                                    },
                                    "password": {
                                        "description": "User's password",
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User successfully login"
                    },
                    "404": {
                        "description": "Unauthorised"
                    }
                }
            }
        },
        "/api/user/info": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "User info",
                "operationId": "cdf71a463c6c18c5370d453b2fbd0437",
                "responses": {
                    "200": {
                        "description": "Logged user info"
                    },
                    "400": {
                        "description": "Unauthorised"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/user/unregister": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Unregister logged user",
                "description": "User will be unregistrated - all its data will be erased.",
                "operationId": "05c829837ebc02ac491146130968e5da",
                "responses": {
                    "200": {
                        "description": "User deleted successfully"
                    },
                    "400": {
                        "description": "Unauthorised"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Tags",
            "description": "Tags"
        },
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}